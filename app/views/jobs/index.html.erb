<div class="container">
<h1>All Jobs</h1>

  <div class="search">
      <div class="search-form">
        <%= form_tag jobs_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "search for jobs"%>
      </div>
        <i class="fas fa-search"><%= submit_tag "Search", class: "btn"%></i>
  </div>
</div>
    <% end %>

<br>
<div class="job-container">
  <div class="job-all col-5" >
      <% @jobs.each do |job| %>
          <div class="job-card">
            <%= link_to job_path(job), remote: true, method: :get, class: 'job-link' do %>
              <div class="row"><h2><%= job.title %></h2></div>
              <div class="row"><h2><%= job.location %></h2></div>
              <h3><%= job.salary %></h3>
              <p><%= job.description %></p>
            <% end %>
          </div>
    <% end %>
  </div>
          <div class="job-location col-5">
          </div>
</div>


