<div class="container">
<h1>All Jobs</h1>

  <div class="search">

    <div class="search-form">
      <%= form_tag jobs_path, method: :get, class: "rel", id: "form" do %>
      <input type="text" name="query" class="form-control rel" placeholder="Search jobs you've posted..." >
      <i class="fa fa-search tb"></i>
      <% end %>
    </div>

      <br>

    <div>
      <div>
        <% @jobs.each do |job| %>
        <% end %>
      </div>
    </div>

  </div>




<br>
<div class="job-container">
  <div class="job-all col-5" >
      <% @jobs.each do |job| %>
          <div class="job-card">
            <%= link_to job_path(job), remote: true, method: :get, class: 'job-link' do %>
              <div class="row"><h2><%= job.title %></h2></div>
              <div class="row"><h2><%= job.location %></h2></div>
              <h3><%= job.salary %></h3>
              <p><%= job.description %></p>
            <% end %>
          </div>
    <% end %>
  </div>
          <div class="job-location col-5">
          </div>
</div>



<script>
  document.querySelector(".tb").addEventListener("click", () => {
    document.getElementById("form").submit();
  })
</script>
