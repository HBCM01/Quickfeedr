<%= simple_form_for @job do |f| %>
  <%= f.input :title %>
  <%= f.input :location %>
  <%= f.input :salary %>
  <%= f.input :description, label: "Job Overview" %>
  <%= f.input :job_spec, label: "Job Specifics"%>
  <%= f.input :photo, label: "Company logo", as: :file %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
